<%= form_for(@guest) do |f| %>
  <% if @guest.errors.any? %>
     
      <% @guest.errors.full_messages.each do |msg| %>
        <h3><%= msg %></h3>
      <% end %>
      
  <% end %>

  <div class="field">
    <%= f.text_field :email , placeholder:'Email...' %>
  </div>
  <div class="actions">
    <%= f.submit "JOIN US", class: "btn btn-large btn-info" %>
  </div>
<% end %>
